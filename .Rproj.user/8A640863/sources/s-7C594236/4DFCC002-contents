a <-calc_assoc(iris)
b<- calc_assoc_all(iris)
d <- calc_assoc(iris, by="Species") # merge this fn with calc_assoc 
association_heatmap(a) # name is not good  
association_heatmap(b) # breaks
association_heatmap(d) # breaks
pairwise_1d_compare(a)
pairwise_1d_compare(b)
pairwise_1d_compare(d) # incorrect
pairwise_1d_plot(a) # breaks
pairwise_1d_plot(b) # breaks, why
pairwise_1d_plot(d)
pairwise_2d_plot(a)
pairwise_2d_plot(b,group_var = "measure_type") # does something, but not what is intended
pairwise_2d_plot(d)


a <-calc_assoc(iris)
b<- calc_assoc_all(iris)
d <- calc_assoc(iris, by="Species")

plot_assoc_matrix(a)
plot_assoc_matrix(b, group_var = "measure_type")
plot_assoc_matrix(d, group_var = "by")

plot_assoc_linear(a)
plot_assoc_linear(b, group_var = "measure_type")
plot_assoc_linear(d, group_var = "by")


plot_assoc_linear(a, plot_type = "dotplot")
plot_assoc_linear(b, group_var = "measure_type", plot_type = "dotplot")
plot_assoc_linear(d, group_var = "by", plot_type = "dotplot")
